# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Secret Key
# IMPORTANT: Change this to a strong, random secret in production
# You can generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=fintech-voice-app-secret-key-2024-change-in-production

# ML API Configuration
# This should point to your Saarthi AI/ML Flask service
ML_API_URL=http://localhost:5000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Demo OTP (For testing purposes only)
DEMO_OTP=123456

# Session Configuration
SESSION_SECRET=session-secret-change-in-production

# Rate Limiting (requests per minute)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

